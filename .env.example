# Cohere AI Configuration
COHERE_API_KEY=your_cohere_api_key
COHERE_EMBED_DIMS=1536
COHERE_EMBED_MODEL=embed-v4.0
COHERE_RERANK_MODEL=rerank-v4.0-pro
COHERE_TEXT_MODEL=command-r7b-12-2024
COHERE_VISION_MODEL=c4ai-aya-vision-32b
FEATURE_COHERE=true
FEATURE_RERANK=true

# Database Configuration
# Option 1: Connection string (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/bizmemory

# Option 2: Individual components (alternative, useful for Docker Compose)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=bizmemory

# Database Connection Pool Settings
# DB_POOL_MAX=20          # Maximum pool size
# DB_POOL_MIN=2           # Minimum pool size
# DB_IDLE_TIMEOUT=30000   # Idle timeout in ms
# DB_CONNECTION_TIMEOUT=10000  # Connection timeout in ms

# Database Retry Configuration
# DB_MAX_RETRIES=5        # Max connection retry attempts
# DB_RETRY_DELAY=2000     # Initial retry delay in ms (uses exponential backoff)

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_min_32_chars

# AWS S3 Storage (Optional - uses local filesystem if not provided)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# App Configuration
NODE_ENV=development
PORT=3000
BACKEND_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
