{
  "_comment": "Configuration for Michigan county inspection scrapers",
  "_note": "All counties use Sword Solutions portal at swordsolutions.com/inspections/",
  
  "washtenaw": {
    "name": "Washtenaw County",
    "state": "Michigan",
    "scraper_type": "sword_solutions",
    "url": "https://swordsolutions.com/inspections/",
    "county_value": "MI - Washtenaw",
    "enabled": true,
    
    "settings": {
      "delay": 3,
      "max_pages": 20,
      "timeout": 30,
      "retry_attempts": 3
    },
    
    "form_fields": {
      "county": "MI - Washtenaw",
      "restaurant_name": "",
      "address": "",
      "city": "",
      "license_num": "",
      "from_date": "",
      "to_date": "",
      "show_partial": "0",
      "search": "1"
    },
    
    "selectors": {
      "business_name": "td:nth-child(1), td.name, .business-name, .name",
      "address": "td:nth-child(2), td.address, .address, .location",
      "date": "td:nth-child(3), td.date, .date, .inspection-date",
      "violations": "td:nth-child(4), td.violations, .violations",
      "severity": "td:nth-child(5), td.severity, .severity, .priority",
      "type": "td.type, .type, .category",
      "report_link": "a[href*='.pdf'], a.report, a.document"
    }
  },
  
